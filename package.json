{
  "name": "Talk-Desktop",
  "version": "1.0.2",
  "private": false,
  "description": "Talk Messaging Platform Desktop Application",
  "author": "Masoud Amjadi <masoudmanson@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/masoudmanson/talk-electron.git"
  },
  "build": {
    "productName": "Talk Desktop",
    "appId": "talk.pod.land",
    "protocols": {
      "name": "talk",
      "schemes": [
        "talk"
      ]
    },
    "files": [
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources(dark)"
    },
    "publish": {
      "provider": "github",
      "owner": "masoudmanson",
      "repo": "talk-electron",
      "private": false
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "cross-env": "^6.0.0",
    "electron-context-menu": "^0.15.0",
    "electron-is-dev": "^1.1.0",
    "electron-modal": "^1.0.0",
    "electron-updater": "^4.1.2",
    "node-notifier": "^6.0.0",
    "podchatweb": "^1.4.7",
    "protocol": "^0.1.4",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-loading-components": "^1.1.12",
    "react-scripts": "^3.3.0",
    "url": "^0.11.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && electron-builder",
    "start": "concurrently \"cross-env NODE_OPTIONS='--max-old-space-size=8192' BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "local-build": "yarn react-build && electron-builder build --win --publish never",
    "deploy": "cross-env NODE_OPTIONS='--max-old-space-size=8192' yarn react-build && electron-builder build --win --publish always"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "electron": "^15.5.5",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0"
  }
}
