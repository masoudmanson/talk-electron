{
  "name": "Talk-Desktop",
  "version": "0.1.15",
  "private": true,
  "description": "Talk Messaging Platform Desktop Application",
  "author": "Masoud Amjadi",
  "build": {
    "productName": "Talk Desktop",
    "appId": "talk.pod.land",
    "protocols": {
      "name": "talk",
      "schemes": [
        "talk"
      ]
    },
    "files": [
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources(light)"
    },
    "publish": {
      "provider": "github",
      "owner": "talk.pod.land",
      "repo": "talk.pod.land",
      "private": false
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "cross-env": "^6.0.0",
    "electron-is-dev": "^1.1.0",
    "electron-modal": "^1.0.0",
    "node-notifier": "^6.0.0",
    "podauth": "^1.2.6",
    "podchatweb": "^0.48.4",
    "protocol": "^0.1.4",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-loading-components": "^1.1.12",
    "react-scripts": "3.1.2",
    "url": "^0.11.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "cls && yarn react-build && electron-builder",
    "start": "cls && concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "electron": "^6.0.10",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0"
  }
}
